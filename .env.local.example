# Database
DATABASE_URL="postgresql://stablecoin:stablecoin_dev@localhost:5433/stablecoin_ai"

# Redis (for BullMQ job queue)
REDIS_URL="redis://localhost:6379"

# NextAuth.js
NEXTAUTH_SECRET="your-super-secret-key-here-generate-a-random-one"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (for magic link authentication)
EMAIL_FROM="noreply@ferrow.app"

# Option 1: Resend (recommended for production)
# Get your API key from https://resend.com/
RESEND_API_KEY="your-resend-api-key"

# Option 2: SMTP (Gmail, Outlook, etc.)
# EMAIL_SERVER="smtp://username:password@smtp.gmail.com:587"

# Option 3: Development mode (leave both empty)
# Magic links will be logged to console in development

# Feature Flags
USE_CIRCLE=false        # Set to true to use real Circle API
USE_MOCKS=true          # Set to false when using real APIs
ENABLE_CCTP=false       # Set to true to enable cross-chain transfers

# Circle API (Required only when USE_CIRCLE=true)
# Get these from https://developers.circle.com/
CIRCLE_API_KEY=""
CIRCLE_ENTITY_SECRET=""
CIRCLE_WEBHOOK_SECRET=""

# LLM Provider (Choose one)
# OpenAI for GPT models
OPENAI_API_KEY=""
# Anthropic for Claude models  
ANTHROPIC_API_KEY=""

# Environment
NODE_ENV=development

# Branding
NEXT_PUBLIC_APP_NAME=Ferrow
NEXT_PUBLIC_APP_TAGLINE=Ferry funds across chains, automatically.
NEXT_PUBLIC_APP_URL=https://stablecoin-ai.vercel.app
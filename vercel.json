{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false,
  "checks": [
    {
      "name": "Health Check",
      "path": "/api/health",
      "initialDelay": "10s",
      "period": "1m"
    },
    {
      "name": "Deployment Check",
      "path": "/api/deployment-check",
      "initialDelay": "15s",
      "period": "5m"
    }
  ]
}